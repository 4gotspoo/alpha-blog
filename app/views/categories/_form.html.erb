<div class="row">
  <div class="twelve columns grey center">
    <%= form_for @category do |f| %> 
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
	<%= f.submit 'Submit' %>
	<% end %>

	<% if @category.errors.any? %>
	<div class="error">
	<p>The following errors are preventing the category from being created:</p>
		<ul>
		<% @category.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	<% end %>

	<%= link_to 'Cancel request, return to article list', articles_path %>
  </div>
</div>