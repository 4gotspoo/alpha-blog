<div class="row">
  <div class="twelve columns grey center">
    <h1>Alpha-blog</h1>
  </div>
</div>

<div class="row">
  <div class="two columns grey center">
    <%= link_to 'Home', root_path %>
  </div>
  <div class="two columns grey center">
    <%= link_to 'About', about_path %>
  </div>
  <div class="two columns grey center">
    <%= link_to 'Users', users_path %>
  </div>
  <div class="two columns grey center">
    <%= link_to 'Posts', articles_path %>
	<% if logged_in? %>
	 | <%= link_to 'Create', new_article_path %>
	<% end %>
  </div>
  <div class="two columns grey center">
	<% if logged_in? %>
    <%= link_to truncate(current_user.username, :length => 12), user_path(current_user.id) %>
	<% else %>
	<%= link_to 'Register', signup_path %>
	<% end %>
  </div>
  <div class="two columns grey center">
	<% if logged_in? %>
    <%= link_to 'Settings', edit_user_path(current_user) %> | <%= link_to 'Logout', logout_path, method: :delete %>
	<% else %>
	<%= link_to 'Login', login_path %>
	<% end %>
  </div>
</div>

<% if !logged_in? %>

<div class="row">
	<div class="twelve columns red center">
		You are not currently logged in: certain features are disabled.
	</div>
</div>

<% end %>
