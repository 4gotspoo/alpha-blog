<div class="row">
  <div class="twelve columns grey center">Selected article: Article #<%= @article.id %></div>
</div>

<div class="row">
  <div class="one columns grey center">
    <%= @article.id %><br />
    <%= link_to 'EDIT', edit_article_path(@article.id) %>
  </div>
  <div class="two columns grey center">Title<br />
    <%= @article.title %>
  </div>
  <div class="three columns grey center">Description<br />
    <%= @article.description %>
  </div>
  <div class="three columns grey center">Created<br />
    <%= @article.created_at %>
  </div>
  <div class="three columns grey center">Edited<br />
    <%= @article.updated_at %>
  </div>
</div>

<div class="row">
  <div class="twelve column grey center">
    <%= link_to 'Back to Index', articles_path %>
  </div>
</div>
