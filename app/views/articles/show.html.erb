<div class="row">
  <div class="twelve columns grey center">Selected article: Article #<%= @article.id %></div>
</div>

<div class="row">
  <div class="one columns grey center">
    <%= @article.id %><br />
    <%= link_to 'EDIT', edit_article_path(@article.id) %>
  </div>
  <div class="two columns grey center"><strong>Title</strong><br />
    <%= @article.title %>
  </div>
  <div class="three columns grey center"><strong>Description</strong><br />
    <%= @article.description %>
  </div>
  <div class="two columns grey center"><strong>Author</strong><br />
    <%= link_to(@article.user) do %>
		<%= @article.user.username if @article.user %>
	<% end %>

<br />
  </div>
  <div class="two columns grey center"><strong>Time Published</strong><br />
    <%= time_ago_in_words(@article.created_at) %>
  </div>
  <div class="two columns grey center"><strong>Since Revision</strong><br />
    <%= time_ago_in_words(@article.updated_at) %>
  </div>
</div>

<div class="row">
  <div class="twelve column grey center">
    <%= link_to 'Back to Index', articles_path %>
  </div>
</div>
