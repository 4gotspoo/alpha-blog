<div class="row">
  <div class="twelve columns grey center">
  Editing selected article: Article #<%= @article.id %>
  </div>
</div>

<div class="row">
  <div class="four columns grey center">
    <%= form_for @article do |f| %>
      <%= f.label :id %>
      <%= @article.id %>
      <br /><br />    
      <%= f.label :created_at %>
      <%= @article.created_at %><br /><br />
      <%= f.label :updated_at %>
      <%= @article.updated_at %>
  </div>
  <div class="eight columns grey center">
      <%= f.label :title %>
      <%= f.text_field :title %><br /><br />
      <%= f.label :description %>
      <%= f.text_area :description %>
      <%= f.submit %>
	<% end %>

    <% if @article.errors.any? %>
    <p>The following errors are preventing the article from being created:</p>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      </ul>
    <% end %>
  <% end %>
  </div>
</div>
